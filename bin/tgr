#!/bin/sh
# Open the TortoiseGit repo browser dialog
if [ "$#" == "1" ] 
then
    "C:\Program Files\TortoiseGit\bin\TortoiseGitProc.exe" /command:repobrowser /rev:"$@" &
elif [ "$#" == "2" ]
then
    "C:\Program Files\TortoiseGit\bin\TortoiseGitProc.exe" /command:repobrowser /rev:"$1" /path:"$2" &
else
    "C:\Program Files\TortoiseGit\bin\TortoiseGitProc.exe" /command:repobrowser "$@" &
fi
